# Docker Development Environment Configuration

# Django Settings
DJANGO_SECRET_KEY=django-insecure-docker-dev-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Database
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# Media Storage
MEDIA_STORAGE_BACKEND=local
MEDIA_ROOT=/app/media
MEDIA_URL=/media/

# Cloud Storage (unused in docker dev, but kept for reference)
CLOUD_STORAGE_BUCKET_NAME=
CLOUD_STORAGE_REGION=
CLOUD_STORAGE_ACCESS_KEY=
CLOUD_STORAGE_SECRET_KEY=
CLOUD_STORAGE_ENDPOINT_URL=

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8005,http://127.0.0.1:8005,http://frontend

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1

# Server
PORT=8005

# GPU Configuration
USE_GPU=true
CUDA_VISIBLE_DEVICES=0
DOCKER_TARGET=development-gpu
