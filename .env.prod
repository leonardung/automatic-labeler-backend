# Production Environment Configuration

# Django Settings
DJANGO_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_IN_PRODUCTION
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database (consider using PostgreSQL in production)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3
# For PostgreSQL:
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=automatic_labeler
# DATABASE_USER=dbuser
# DATABASE_PASSWORD=secure_password
# DATABASE_HOST=db
# DATABASE_PORT=5432

# Media Storage - Cloud Storage
MEDIA_STORAGE_BACKEND=cloud
MEDIA_ROOT=/app/media
MEDIA_URL=https://your-bucket-name.s3.amazonaws.com/media/

# AWS S3 Configuration (example)
CLOUD_STORAGE_BUCKET_NAME=your-bucket-name
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_ACCESS_KEY=YOUR_AWS_ACCESS_KEY
CLOUD_STORAGE_SECRET_KEY=YOUR_AWS_SECRET_KEY
CLOUD_STORAGE_ENDPOINT_URL=https://s3.amazonaws.com

# For other cloud providers (GCS, Azure, DigitalOcean Spaces, etc.):
# CLOUD_STORAGE_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com
# CLOUD_STORAGE_ENDPOINT_URL=https://storage.googleapis.com

# CORS Settings (adjust to your frontend domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Server
PORT=8000

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
